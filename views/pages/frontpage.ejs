<div class="intro">
  <div class="slider splide">
    <div class="splide__track">
      <div class="splide__list">
        <% sliderProducts.forEach(product => { %>
          <div class="slide splide__slide">
            <div class="picture-container">
              <a href="/products/product/<%= product.id %>">
                <picture>
                  <source srcset="<%= product.largeImage.link %>" media="(min-width: 569px)">
                  <img src="<%= product.image.link %>" alt="<%= product.image.alt %>">
                </picture>
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
<article class="categories">
  <header class="categories__header">
    <h3 class="categories__title section-title">categories</h3>
  </header>
  <nav class="categories__navigation">
    <div class="categories__navigation__item">
      <a href="products/list?category=ice-cream" class="categories__navigation__link">
        <img src="img/category/ice-cream.png" alt="ice cream image">
      </a>
    </div>
    <div class="categories__navigation__item">
      <a href="products/list?category=cookies" class="categories__navigation__link">
        <img src="img/category/cookie.png" alt="cookies image">
      </a>
    </div>
    <div class="categories__navigation__item">
      <a href="products/list?category=buns" class="categories__navigation__link">
        <img src="img/category/bun.png" alt="buns image">
      </a>
    </div>
    <div class="categories__navigation__item">
      <a href="products/list?category=desserts" class="categories__navigation__link">
        <img src="img/category/dessert.png" alt="desserts image">
      </a>
    </div>
    <div class="categories__navigation__item">
      <a href="products/list?category=cupcakes" class="categories__navigation__link">
        <img src="img/category/cupcake.png" alt="cupcakes image">
      </a>
    </div>
    <div class="categories__navigation__item">
      <a href="products/list?category=cakes" class="categories__navigation__link">
        <img src="img/category/cake.png" alt="cakes image">
      </a>
    </div>
  </nav>
  <div class="all-categories">
    <a href="products">
      <img src="img/category/all-categories.png" alt="many images of sweets">
    </a>
  </div>
</article>
<article class="top-products">
  <header class="top-products__header">
    <h3 class="top-products__title section-title">top products</h3>
  </header>
  <% topProducts.forEach(product => { %>
    <div class="top-products__product">
      <div class="top-products__product__picture">
        <a href="/products/product/<%= product.id %>">
          <picture>
            <source media="(min-width:650px)" srcset="<%= product.image.link %>">
            <img src="<%= product.image.link %>" alt="<%= product.image.alt %>">
          </picture>
        </a>
      </div>
      <div class="top-products__product__name-container">
        <a href="/products/product/<%= product.id %>">
          <span class="top-products__product__name"><%= product.title %></span>
        </a>
      </div>
    </div>
  <% }) %>
</article>
<article class="season-products">
  <header class="season-products__header">
    <h3 class="season-products__title section-title">sweets this season</h3>
  </header>
  <% seasonProducts.forEach(product => { %>
    <div class="season-products__product">
      <div class="season-products__product__picture">
        <a href="/products/product/<%= product.id %>">
          <picture>
            <source media="(min-width:650px)" srcset="<%= product.image.link %>">
            <img src="<%= product.image.link %>" alt="<%= product.image.alt %>">
          </picture>
        </a>
      </div>
      <div class="season-products__product__name-container">
        <a href="/products/product/<%= product.id %>">
          <span class="season-products__product__name"><%= product.title %></span>
        </a>
      </div>
    </div>
  <% }) %>
  <aside class="season-products__special-product special-product special-season-product">
    <header class="season-products__special-product__title-container">
      <a href="<%= specialProduct.link %>" class="special-season-product-link special-season-product-link-cake">
        <h4 class="season-products__special-product__title"><%= specialProduct.title %></h4>
      </a>
    </header>
    <picture>
      <a href="<%= specialProduct.link %>">
        <source media="(min-width:650px)" srcset="<%= specialProduct.image.link %>">
        <img src="<%= specialProduct.image.link %>" alt="<%= specialProduct.image.alt %>">
      </a>
    </picture>
    <p><%= specialProduct.description %></p>
    <footer class="season-products__special-product__details-container">
      <div class="season-products__special-product__details">
        <a href="<%= specialProduct.link %>" class="details-link redirect-link">details</a>
      </div>
    </footer>
  </aside>
</article>
