<article class="news">
  <header class="news__header">
    <h3 class="news__title section-title">latest news</h3>
    <p class="news__header__description">
      <q class="news__quote quote">A trip to find your own "living with harmony" without getting tired. <br> May it be
        useful in your daily life.</q>
    </p>
  </header>
  <% news.forEach(article => { %>
    <section class="news__item">
      <a href="<%= article.link %>">
        <div class="news__item__picture">
          <img src="<%= article.image.link %>" alt="<%= article.image.alt %>">
      </a>
      </div>
      <div class="news__item__title-container">
        <h4 class="news__item__title"><%= article.title %></h4>
      </div>
      <div class="news__item__description-container">
        <p class="news__item__description"><%= article.description %></p>
      </div>
      </a>
    </section>
  <% }) %>
</article>
